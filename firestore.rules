
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    // ----------------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------------

    /**
     * @description Provides public read-only access to ward pollution data. Writes are disabled to protect data integrity.
     */
    match /locations/bengaluru/wards/{wardId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description User profile data. Users can read/write their own profile.
     */
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    /**
     * @description Citizen reports. Authenticated users can create them. They can only read their own reports.
     */
    match /reports/{reportId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      // Updates should only be done by government roles
      allow update: if isRole('government');
    }

    /**
     * @description Company and facility data. Generally read-only for clients.
     */
    match /companies/{companyId} {
      allow read: if isSignedIn(); // Or more specific role-based access
      allow write: if isRole('government'); // Only admins/gov can create/update companies

      match /facilities/{facilityId} {
        allow read: if isSignedIn();
        allow write: if isRole('government');
      }
    }
    
    /**
     * @description Investigation data. Highly restricted.
     */
    match /investigations/{investigationId} {
       allow read, write: if isRole('government');
    }
  }
}
